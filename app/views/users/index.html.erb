<div class="container">
    
    <div class="row">
        
        <% @user.each_slice(3) do |row| %>
            
            <% row.each do |user| %>
                
                <div class="col-md-4">
                    <div class="card">
                        <i class='far fa-user' style='font-size:50px'></i>
                        <!-- AquÃ­ va una imagen standard del usuario-->
                        
                        
                        <div class="card-body">
                        <h4 class="card-title"> <%= user.name %> <%= user.last_name %> </h4>    
                        <p> Ciudad : <%= user.city_id %> </p>    
                        <p> Isapre actual : <%= user.isapre_actual %> </p>
                        <p> Sueldo mayor a $1.000.000 ? : <%= user.salary %> </p> 
                        <%= link_to "Obtener", "#", class: 'btn btn-success' %>
                        </div>
                    </div>
                </div>

            <% end %>
            <div class="w-100"> </div>

        <% end %>
    
    </div>

</div>