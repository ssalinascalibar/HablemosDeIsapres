<div class="container">
    
    <div class="row">
        
        <% @user.each_slice(3) do |row| %>
            
            <% row.each do |user| %>
                
                <div class="col-md-4">
                    <div class="card">
                    <%= user.name %> <%= user.last_name %>
                    </div>
                </div>

            <% end %>

        <% end %>
    
    </div>

</div>