<div class="jumbotron">
    <h3> HABLEMOS DE ISAPRE | COTIZA TU ISAPRE CON NOSOTROS! </h3>
</div>


<div class="container">

    <div class="row">

        <div class="col">

        
            <%= form_with model: @user, local: true do |f|  %>

                <p>   
                    <%= f.label :name, "Nombre" %>
                    <%= f.text_field :name, class: 'form-control' %>
                </p>

                
                <p>
                    <%= f.label :last_name, "Apellido" %>
                    <%= f.text_field :last_name, class: 'form-control'  %>
                </p>
                    
                
                <p>
                    <%= f.label :city_id, "Ciudad" %>
                    <%= f.select :city_id, [["Santiago", 1],["Rancagua", 2],
                        ["ChillÃ¡n", 3]], {}, class: 'form-control'%>
                </p>    


                <p>
                    <%= f.label :gender, "Femenino" %>
                    <%= f.radio_button :gender, "Femenino" %>
                    <%= f.label :gender, "Masculino" %>
                    <%= f.radio_button :gender, "Masculino" %>
                </p>
                    
                
                <h4>
                    <%= f.label :salary, "Su Sueldo es mayor a 1.000.000?" %>
                    <%= f.label :salary, "Si" %>
                    <%= f.radio_button :salary, "true"  %>
                    <%= f.label :salary, "No" %>
                    <%= f.radio_button :salary, "false"  %>
                    </h4>
                    
                <p>
                    <%= f.submit "Enviar", class: 'btn btn-primary'  %>
                </p>    

            <% end %>

        </div>    

    </div>    

</div>